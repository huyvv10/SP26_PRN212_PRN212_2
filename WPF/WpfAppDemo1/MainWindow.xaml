<Window x:Class="WpfAppDemo1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDemo1"
        mc:Ignorable="d"
        Title="Student Management" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="5">
        <Label Background="GreenYellow" HorizontalContentAlignment="Center" Margin="0,0,0,5" Padding="10" FontSize="24" FontWeight="Bold" Foreground="Blue">STUDENT MANAGEMENT</Label>

        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
            <Button x:Name="btnOK" Content="OK" Background="Yellow" Foreground="Red" Width="125" FontWeight="Bold" Margin="5"></Button>
            <Button x:Name="btnCancel" Content="Cancel" Background="Yellow" Foreground="Red" Width="125" FontWeight="Bold" Margin="5"></Button>
            <Button x:Name="btnClose" Content="Close" Background="Yellow" Foreground="Red" Width="125" FontWeight="Bold" Margin="5"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,5" HorizontalAlignment="Center">
            <Button x:Name="btnOK2" Content="OK" Background="Yellow" Foreground="Red" Width="125" FontWeight="Bold" Margin="5"></Button>
            <Button x:Name="btnCancel2" Content="Cancel" Background="Yellow" Foreground="Red" Width="125" FontWeight="Bold" Margin="5"></Button>
            <Button x:Name="btnClose2" Content="Close" Background="Yellow" Foreground="Red" Width="125" FontWeight="Bold" Margin="5"></Button>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,5,0,5" HorizontalAlignment="Left">
            <Button x:Name="btnOK3" Content="OK" Background="Yellow" Foreground="Red" Width="125" FontWeight="Bold" Margin="5"></Button>
            <Button x:Name="btnCancel3" Content="Cancel" Background="Yellow" Foreground="Red" Width="125" FontWeight="Bold" Margin="5"></Button>
            <Button x:Name="btnClose3" Content="Close" Background="Yellow" Foreground="Red" Width="125" FontWeight="Bold" Margin="5"></Button>
        </StackPanel>
        <Grid Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0">Id</Label>
                <TextBox x:Name="txtId" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"></TextBox>
                
                <Label Grid.Row="1" Grid.Column="0">Name</Label>
                <TextBox x:Name="txtName" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"></TextBox>
                
                <Label Grid.Row="2" Grid.Column="0">Birth Date</Label>
                <TextBox x:Name="txtBOD" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"></TextBox>
                
                <Label Grid.Row="3" Grid.Column="0">Name</Label>
                <TextBox x:Name="txtAddress" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"></TextBox>
                
                <Label Grid.Row="4" Grid.Column="0">Name</Label>
                <TextBox x:Name="txtabc" Grid.Row="4" Grid.Column="1" Margin="0,0,0,5"></TextBox>
            </Grid>
            <Grid Grid.Column="1">
                <DataGrid Margin="5">
                    <DataGrid.Columns></DataGrid.Columns>
                    
                </DataGrid>    

            </Grid>

        </Grid>


    </StackPanel>


</Window>
